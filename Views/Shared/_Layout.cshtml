<!DOCTYPE html>
<html>
<head>

    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AdminLTE 3 </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>
<body>

    <div class="wrapper">
        
        <nav class="main-header navbar navbar-expand bg-primary navbar-dark border-bottom">
            
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" data-widget="pushmenu" href="#"><i class="fa fa-bars"></i></a></li>
               <!-- <li class="nav-item d-none d-sm-inline-block"><a href="index3.html" class="nav-link">Home</a></li>-->
                
            </ul>
             
            <!-- Right navbar links  -->
            <ul class="navbar-nav ml-auto">
                @Html.Partial("_LoginPartial")
                <li class="nav-item">
                    <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#">
                        <i class="fa fa-th-large"></i>
                    </a>
                </li>
            </ul>  
        </nav>
        
        <aside class="main-sidebar sidebar-light-primary elevation-4">
             
            
            <a href="@Url.Action("Index", "Home")" class="brand-link bg-primary">
                <img src="@Url.Content("~/Content/img/AdminLTELogo.png")" alt="Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">Tutorial</span>
            </a>


            <div class="sidebar">
                 
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="@Url.Content("~/Content/img/avatar.png")" class="img-circle elevation-2" alt="User">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">Vinicius Duarte Louzada</a>
                    </div>
                </div>
                


                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                         
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Home")" class="nav-link active">
                                <i class="nav-icon fa fa-home"></i>
                                <p>  Início  </p>
                            </a>
                        </li>
                         
                        <li class="nav-item">
                            <a href="@Url.Action("About", "Home")" class="nav-link">
                                <i class="nav-icon fa fa-th"></i>
                                <p>  Sobre  </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="@Url.Action("Contact", "Home")" class="nav-link">
                                <i class="nav-icon fa fa-phone"></i>
                                <p>  Contato  </p>
                            </a>
                        </li> 
                        
                    </ul>
                    
                </nav>
                
            </div>
             
        </aside>
         


        <div class="content-wrapper">
             
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">
                                @RenderSection("content-header", required: false)
                            </h1>
                        </div> 
                       <!-- <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active">Starter Page</li>
                            </ol>
                        </div> -->

                    </div> 
                </div> 
            </div>
             
            <div class="content">
                <div class="container-fluid">
                    <div class="row"> 
                        @RenderBody() 
                    </div> 
                </div> 
            </div> 
        </div>
        
        <aside class="control-sidebar control-sidebar-dark">
            
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
         
        <footer class="main-footer">
             
            <div class="float-right d-none d-sm-inline">
                Anything you want
            </div>
             
            <strong>Copyright &copy; @DateTime.Now.Year <a href="https://adminlte.io">AdminLTE.io</a>.</strong> All rights reserved.
        </footer>
    </div>


     
     

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/adminlte")
    @RenderSection("scripts", required: false)
</body>
</html>

 